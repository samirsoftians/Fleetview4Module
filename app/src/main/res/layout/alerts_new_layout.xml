<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <include
        layout="@layout/header"/>


</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textStyle="bold"
            android:background="@drawable/highlighed"
            android:id="@+id/alerts_today"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/alerts_yestrday"
            android:layout_alignLeft="@+id/alerts_yestrday"
            android:layout_alignStart="@+id/alerts_yestrday"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yestrday"
            android:textStyle="bold"
            android:background="@drawable/highlighed"
            android:id="@+id/alerts_yestrday"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/alerts_lastweek"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Week"
            android:background="@drawable/highlighed"
            android:textStyle="bold"
            android:id="@+id/alerts_lastweek"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/alerts_lastmonth"
            android:layout_alignRight="@+id/alerts_yestrday"
            android:layout_alignEnd="@+id/alerts_yestrday"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Months"
            android:textStyle="bold"
            android:background="@drawable/highlighed"
            android:id="@+id/alerts_lastmonth"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/namesetter"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>




    </RelativeLayout>


</RelativeLayout>