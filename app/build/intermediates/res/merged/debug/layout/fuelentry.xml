<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white">
    
    
    <LinearLayout 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        
        >
     <include
        android:layout_weight="0.09"
        layout="@layout/header" />
    
     <TextView 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Information"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        />

    <LinearLayout 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
          <TextView 
        android:id="@+id/txtedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle N0."
        android:textSize="18dp"
        />
    
   <Spinner
        android:id="@+id/spnvehno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        />
        
    </LinearLayout>
  
        <LinearLayout 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >
          <TextView 
        android:id="@+id/txtdatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date-Time : "
        android:textSize="18dp"
        />
    
    <TextView
        android:id="@+id/date"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="00/00/0000"
        android:textColor="#000000"
        android:background="@drawable/edittext_design"
        android:textSize="18sp" />
            
           <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/c11" />
       
    </LinearLayout>
  
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" >

                  <TextView
                      android:id="@+id/time"
                      android:layout_width="110dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="100dp"
                      android:layout_marginTop="10dp"
                      android:background="@drawable/edittext_design"
                      android:text="00:00:00"
                      android:textColor="#000000"
                      android:textSize="18sp" />
                  
                    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
         android:layout_marginTop="15dp"
            android:src="@drawable/t1" />
                  
              </LinearLayout>
              <LinearLayout 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  
                  >
                    
                  
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Full Tank:"
                  android:textSize="18dp"
                  />
                  
              <CheckBox 
                  android:id="@+id/checkbox"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
               
                  />
              
              
          </LinearLayout>
        <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
          <TextView 
        android:id="@+id/txtdriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Driver : "
        android:textSize="18dp"
        />
    
   <Spinner
        android:id="@+id/spndriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        />
       
    </LinearLayout>
    
        
          <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

          <TextView
              android:id="@+id/txtlitres"
              android:layout_width="117dp"
              android:layout_height="wrap_content"
              android:text=" Litres :     "
              android:textSize="18dp" />
    
   <EditText
        android:id="@+id/liters"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_design"
        
        />
       
    </LinearLayout>
    
             <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

          <TextView
              android:id="@+id/txtodometer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=" Odometer :     "
              android:textSize="18dp" />
    
   <EditText
       android:id="@+id/odometer"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp" 
         android:background="@drawable/edittext_design"/>
       
    </LinearLayout>
    
             <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
          <TextView 
        android:id="@+id/txtpetrolpump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Petrol Pump : "
        android:textSize="18dp"
        />
    
   <EditText
        android:id="@+id/Petrol"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
          android:background="@drawable/edittext_design"
          android:layout_marginTop="10dp"
        />
       
    </LinearLayout>

             
             <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
          <TextView 
        android:id="@+id/txtremark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Remark :         "
        android:textSize="18dp"
        />
    
   <EditText
        android:id="@+id/remark"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
          android:background="@drawable/edittext_design"
          android:layout_marginTop="10dp"
        />
       
    </LinearLayout>
    
                 
         <Button
            android:id="@+id/submit1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:paddingEnd="30dp"
            android:background="@drawable/sub"
            android:textColor="#000000"
            android:textSize="18sp" />
        
    
                     <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="170dp"
    >
    <include layout="@layout/footer" />
    
    </RelativeLayout> 
      </LinearLayout>
             
</ScrollView>
