<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

 <LinearLayout
     android:layout_width="wrap_content"
     android:paddingTop="50dp"
     android:layout_height="wrap_content"
     android:orientation="vertical">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/loginname"
      android:textStyle="bold"
      android:textSize="10dp"
      android:layout_marginRight="40dp"
      android:textColor="#FF0000"
      android:gravity="end">

  </TextView>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="                        Main Menu"
      android:layout_gravity="center"
      android:textSize="20dp"
      android:textStyle="bold"
      android:layout_marginTop="30dp"
      android:textColorHighlight="#123345"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

   <TextView
       android:id="@+id/img1_vehicle_intimation"
       android:layout_width="126dp"
       android:layout_height="158dp"
       android:layout_gravity="center"
       android:layout_marginLeft="40dp"
       android:layout_marginTop="22dp"
       android:textColor="#000000"
       android:text="Vehicle Intimation"
       android:drawableTop="@drawable/vehinticon"
       android:textStyle="bold"
       android:textSize="15dp"/>
   <View
       android:layout_width="1dp"
       android:layout_height="match_parent"
       android:background="#b7c3c2" />
   <TextView
       android:layout_width="126dp"
       android:id="@+id/img2_odometer_reading"
       android:layout_height="158dp"
       android:layout_gravity="center"
       android:layout_marginLeft="5dp"
       android:layout_marginTop="23dp"
       android:textColor="#000000"
       android:background="@android:color/transparent"
       android:drawableTop="@drawable/iconodometer"
       android:text="Odometer Reading"
       android:textStyle="bold"
       android:textSize="15dp"/>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="          ____________________________________________________  "
      android:textStyle="bold"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

   <TextView
       android:id="@+id/img3_alerts"
       android:layout_width="126dp"
       android:layout_height="158dp"
       android:layout_gravity="center"
       android:layout_marginLeft="40dp"
       android:layout_marginTop="30dp"
       android:background="@android:color/transparent"
       android:drawableTop="@drawable/alerticon"
       android:text="            Alerts"
       android:textColor="#000000"
       android:textStyle="bold"
       android:textSize="15dp"                />
   <View
       android:layout_width="1dp"
       android:layout_height="match_parent"
       android:background="#b7c3c2" />
   <TextView
       android:id="@+id/img4_violation"
       android:layout_width="126dp"
       android:layout_height="158dp"
       android:layout_gravity="center"
       android:layout_marginLeft="5dp"
       android:layout_marginTop="30dp"
       android:textColor="#000000"
       android:background="@android:color/transparent"
       android:drawableTop="@drawable/violationicon"
       android:text="         Violation"
       android:textStyle="bold"
       android:textSize="15dp"/>

  </LinearLayout>

 </LinearLayout>

</ScrollView>

